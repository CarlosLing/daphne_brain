{
  "type": "run_function",
  "params":
  [
    { "name": "design_id", "type": "design_id", "options": "", "mandatory": true }
  ],
  "function":
  {
    "run_template": "run_func.Critic_general_call('${design_id}', data['designs'])",
    "result_type": "list",
    "result_fields": {
      "adv_type": "item[\"type\"]",
      "advice": "item[\"advice\"]"
    }
  },
  "voice_response": {
    "type": "list",
    "begin": "The advice I have is: ",
    "repeat": "${adv_type}: ${advice}",
    "end": "."
  },
  "visual_response": {
    "type": "list",
    "item_template": "<b>${adv_type}</b>: ${advice}"
  }
}